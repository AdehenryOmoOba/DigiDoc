@page
@model DigiDocWebApp.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">
                <i class="fas fa-chart-bar me-2 text-primary"></i>
                Dashboard
            </h1>
            <div>
                <a href="/forms/generate" class="btn btn-primary me-2">
                    <i class="fas fa-plus me-1"></i>Generate Form
                </a>
                <a href="/forms" class="btn btn-outline-primary">
                    <i class="fas fa-list me-1"></i>View All Forms
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="dashboard-stats">
    <div class="stat-card">
        <div class="stat-icon text-primary">
            <i class="fas fa-file-alt"></i>
        </div>
        <div class="stat-number" id="totalForms">-</div>
        <div class="stat-label">Total Forms</div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon text-info">
            <i class="fas fa-inbox"></i>
        </div>
        <div class="stat-number" id="pendingReview">-</div>
        <div class="stat-label">Pending Review</div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon text-warning">
            <i class="fas fa-clock"></i>
        </div>
        <div class="stat-number" id="underReview">-</div>
        <div class="stat-label">Under Review</div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon text-success">
            <i class="fas fa-check-circle"></i>
        </div>
        <div class="stat-number" id="approved">-</div>
        <div class="stat-label">Approved</div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon text-danger">
            <i class="fas fa-undo"></i>
        </div>
        <div class="stat-number" id="returned">-</div>
        <div class="stat-label">Returned</div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon text-secondary">
            <i class="fas fa-times-circle"></i>
        </div>
        <div class="stat-number" id="rejected">-</div>
        <div class="stat-label">Rejected</div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-bolt me-2 text-warning"></i>
                    Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-6 mb-3">
                        <a href="/forms/generate" class="btn btn-outline-primary w-100 h-100 d-flex flex-column align-items-center justify-content-center p-3">
                            <i class="fas fa-magic fa-2x mb-2"></i>
                            <span>Generate Form</span>
                            <small class="text-muted">From Image</small>
                        </a>
                    </div>
                    <div class="col-6 mb-3">
                        <a href="/forms" class="btn btn-outline-success w-100 h-100 d-flex flex-column align-items-center justify-content-center p-3">
                            <i class="fas fa-list fa-2x mb-2"></i>
                            <span>View Forms</span>
                            <small class="text-muted">All Templates</small>
                        </a>
                    </div>
                    <div class="col-6 mb-3">
                        <a href="/submissions?status=Submitted" class="btn btn-outline-info w-100 h-100 d-flex flex-column align-items-center justify-content-center p-3">
                            <i class="fas fa-eye fa-2x mb-2"></i>
                            <span>Review</span>
                            <small class="text-muted">Pending Submissions</small>
                        </a>
                    </div>
                    <div class="col-6 mb-3">
                        <a href="/submissions" class="btn btn-outline-secondary w-100 h-100 d-flex flex-column align-items-center justify-content-center p-3">
                            <i class="fas fa-chart-line fa-2x mb-2"></i>
                            <span>Analytics</span>
                            <small class="text-muted">View Reports</small>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-bell me-2 text-info"></i>
                    Recent Activity
                </h5>
            </div>
            <div class="card-body">
                <div id="recentActivity">
                    <div class="text-center text-muted">
                        <i class="fas fa-spinner fa-spin fa-2x mb-2"></i>
                        <p>Loading recent activity...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Submissions -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-clock me-2 text-primary"></i>
                    Recent Submissions
                </h5>
                <a href="/submissions" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover" id="recentSubmissionsTable">
                        <thead>
                            <tr>
                                <th>Form Name</th>
                                <th>Submitted By</th>
                                <th>Status</th>
                                <th>Submitted Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="5" class="text-center text-muted">
                                    <i class="fas fa-spinner fa-spin me-2"></i>
                                    Loading recent submissions...
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            loadDashboardStats();
            loadRecentActivity();
            loadRecentSubmissions();
            
            // Refresh data every 30 seconds
            setInterval(function() {
                loadDashboardStats();
                loadRecentActivity();
                loadRecentSubmissions();
            }, 30000);
        });
        
        function loadDashboardStats() {
            $.get('/api/submissions/dashboard', function(data) {
                $('#totalForms').text(data.totalForms || 0);
                $('#pendingReview').text(data.pendingReview || 0);
                $('#underReview').text(data.underReview || 0);
                $('#approved').text(data.approved || 0);
                $('#returned').text(data.returned || 0);
                $('#rejected').text(data.rejected || 0);
            }).fail(function() {
                console.log('Failed to load dashboard stats');
            });
        }
        
        function loadRecentActivity() {
            $.get('/api/notifications/recent', function(data) {
                const container = $('#recentActivity');
                if (data && data.length > 0) {
                    let html = '';
                    data.slice(0, 5).forEach(function(activity) {
                        html += `
                            <div class="d-flex align-items-start mb-3">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-${getActivityIcon(activity.type)} text-${getActivityColor(activity.type)}"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <div class="fw-bold">${activity.title}</div>
                                    <div class="small text-muted">${activity.message}</div>
                                    <div class="small text-muted">${new Date(activity.createdAt).toLocaleString()}</div>
                                </div>
                            </div>
                        `;
                    });
                    container.html(html);
                } else {
                    container.html(`
                        <div class="text-center text-muted">
                            <i class="fas fa-inbox fa-2x mb-2"></i>
                            <p>No recent activity</p>
                        </div>
                    `);
                }
            }).fail(function() {
                $('#recentActivity').html(`
                    <div class="text-center text-muted">
                        <i class="fas fa-exclamation-triangle fa-2x mb-2"></i>
                        <p>Failed to load recent activity</p>
                    </div>
                `);
            });
        }
        
        function loadRecentSubmissions() {
            $.get('/api/submissions?limit=5', function(data) {
                const tbody = $('#recentSubmissionsTable tbody');
                if (data && data.length > 0) {
                    let html = '';
                    data.forEach(function(submission) {
                        html += `
                            <tr>
                                <td>
                                    <div class="fw-bold">${submission.formTemplate.name}</div>
                                    <small class="text-muted">${submission.formTemplate.description}</small>
                                </td>
                                <td>${submission.submittedBy}</td>
                                <td>
                                    <span class="badge badge-${getStatusClass(submission.status)}">
                                        ${getStatusText(submission.status)}
                                    </span>
                                </td>
                                <td>${new Date(submission.submittedAt || submission.createdAt).toLocaleString()}</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/submissions/${submission.id}/render" class="btn btn-outline-primary" title="View">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        ${submission.status === 'Submitted' ? `
                                            <button class="btn btn-outline-success" onclick="startReview(${submission.id})" title="Start Review">
                                                <i class="fas fa-play"></i>
                                            </button>
                                        ` : ''}
                                    </div>
                                </td>
                            </tr>
                        `;
                    });
                    tbody.html(html);
                } else {
                    tbody.html(`
                        <tr>
                            <td colspan="5" class="text-center text-muted">
                                <i class="fas fa-inbox fa-2x mb-2"></i>
                                <p>No recent submissions</p>
                            </td>
                        </tr>
                    `);
                }
            }).fail(function() {
                $('#recentSubmissionsTable tbody').html(`
                    <tr>
                        <td colspan="5" class="text-center text-muted">
                            <i class="fas fa-exclamation-triangle fa-2x mb-2"></i>
                            <p>Failed to load recent submissions</p>
                        </td>
                    </tr>
                `);
            });
        }
        
        function getActivityIcon(type) {
            switch (type) {
                case 1: return 'check-circle'; // Success
                case 2: return 'exclamation-triangle'; // Warning
                case 3: return 'times-circle'; // Error
                case 4: return 'file-alt'; // FormSubmitted
                case 5: return 'undo'; // FormReturned
                case 6: return 'check-double'; // FormApproved
                case 7: return 'times'; // FormRejected
                default: return 'info-circle'; // Info
            }
        }
        
        function getActivityColor(type) {
            switch (type) {
                case 1: return 'success'; // Success
                case 2: return 'warning'; // Warning
                case 3: return 'danger'; // Error
                case 4: return 'primary'; // FormSubmitted
                case 5: return 'warning'; // FormReturned
                case 6: return 'success'; // FormApproved
                case 7: return 'danger'; // FormRejected
                default: return 'info'; // Info
            }
        }
        
        function getStatusClass(status) {
            switch (status) {
                case 'Draft': return 'secondary';
                case 'Submitted': return 'info';
                case 'UnderReview': return 'warning';
                case 'Approved': return 'success';
                case 'Returned': return 'danger';
                case 'Rejected': return 'danger';
                default: return 'secondary';
            }
        }
        
        function getStatusText(status) {
            switch (status) {
                case 'Draft': return 'Draft';
                case 'Submitted': return 'Submitted';
                case 'UnderReview': return 'Under Review';
                case 'Approved': return 'Approved';
                case 'Returned': return 'Returned';
                case 'Rejected': return 'Rejected';
                default: return status;
            }
        }
        
        function startReview(submissionId) {
            $.post(`/api/submissions/${submissionId}/review`, function(data) {
                if (data.success) {
                    // Refresh the page to show updated status
                    location.reload();
                } else {
                    alert('Failed to start review: ' + data.message);
                }
            }).fail(function() {
                alert('Failed to start review');
            });
        }
    </script>
}