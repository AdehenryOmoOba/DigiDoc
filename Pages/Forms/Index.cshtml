@page
@model DigiDocWebApp.Pages.Forms.IndexModel
@{
    ViewData["Title"] = "Available Forms";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Available Forms</h2>
    <a href="/forms/generate" class="btn btn-primary">
        <i class="fas fa-magic"></i> Generate New Form
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
<ul class="list-group">
@foreach (var form in Model.FormTemplates)
{
    <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
            <a asp-page="Fill" asp-route-id="@form.Id" class="fw-bold">@form.Name</a>
            <span class="text-muted ms-2">@form.Description</span>
        </div>
        <span class="badge bg-primary rounded-pill">Fill</span>
    </li>
}
</ul>