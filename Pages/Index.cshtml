@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to DigiDoc</h1>
    <p class="lead">AI-Powered Digital Form Management System</p>
    
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-magic fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">AI Form Generation</h5>
                    <p class="card-text">Upload form images and let AI create digital forms automatically.</p>
                    <a href="/dashboard" class="btn btn-primary">Get Started</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-file-alt fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Digital Forms</h5>
                    <p class="card-text">Fill out forms with auto-save and progress tracking.</p>
                    <a href="/forms" class="btn btn-success">View Forms</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-chart-bar fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Dashboard</h5>
                    <p class="card-text">Monitor submissions and manage your workflow.</p>
                    <a href="/dashboard" class="btn btn-info">Go to Dashboard</a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="mt-5">
        <a href="/dashboard" class="btn btn-lg btn-primary">
            <i class="fas fa-rocket me-2"></i>
            Launch DigiDoc
        </a>
    </div>
</div>
