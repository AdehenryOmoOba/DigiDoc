@page
@model DigiDocWebApp.Pages.Submissions.IndexModel
@{
    ViewData["Title"] = "Submitted Forms";
}

<h2 class="mb-4 fw-bold">Submitted Forms</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<table class="table table-hover shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Form Name</th>
            <th>Submitted By</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var sub in Model.FormSubmissions)
    {
        <tr>
            <td>@sub.FormTemplate.Name</td>
            <td>@sub.SubmittedBy</td>
            <td>
                <span class="badge @(sub.Status == FormStatus.Approved ? "bg-success" : sub.Status == FormStatus.Returned ? "bg-warning text-dark" : sub.Status == FormStatus.Rejected ? "bg-danger" : "bg-secondary")">
                    @sub.Status
                </span>
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a asp-page="Review" asp-route-id="@sub.Id" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-eye"></i> Review
                    </a>
                    @if (sub.Status == FormStatus.Draft)
                    {
                        <form method="post" style="display: inline;" asp-page-handler="Discard" asp-route-id="@sub.Id">
                            <button type="submit" class="btn btn-sm btn-outline-danger" 
                                    onclick="return confirm('Are you sure you want to discard this draft? This action cannot be undone.');">
                                <i class="fas fa-trash"></i> Discard
                            </button>
                        </form>
                    }
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>

<!-- No additional scripts needed - using inline forms with automatic anti-forgery tokens -->